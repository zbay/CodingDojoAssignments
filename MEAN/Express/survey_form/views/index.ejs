<html>
    <head>
       <title>Dojo Survey</title>
       <style>
form, .resultBox{
    margin-left:auto;
    margin-right:auto;
    margin-top:50px;
    padding: 30px 30px 60px 30px;
    border: 2px solid black ;
}

p, .inlineBlock{
    display:inline-block;
    width: 200px;
}

textarea{
    width:100%;
    display:block;
    margin-top:20px;
}

.row{
    margin-top:10px;
    margin-bottom:10px;
}

input[type='submit']{
    display:block;
    margin-top:30px;
    margin-left:auto;
    margin-right:auto
}

.resultBox div{
    margin-left:20px;
}

.resultBox a{
    display:block;
    float:right;
    padding-bottom:30px !important;
}

.resultBox h1{
    text-decoration: underline;
}

.error{
    color:red;
    display: block;
    text-align:center !important;
    position: relative;
    top:20px;
}
       </style>
    </head>
    <body>
        <form action="/result" method="post">
            <div class="row">
                <div class="inlineBlock">Your Name:</div>
                <div class="inlineBlock"><input type="text" name="name"/></div>
            </div>
            <div class="row">
                <div class="inlineBlock">Dojo Location: </div>
                <div class="inlineBlock">
                    <select name="location">
                        <option value="San Jose">San Jose</option>
                        <option value="Washington">Washington</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="inlineBlock">Favorite Language:</div>
                <div class="inlineblock">
                    <select name="fave_lang">
                        <option value="Python">Python</option>
                        <option value="JavaScript">JavaScript</option>
                    </select>
                </div>
            </div>
            <div class="row">Comment (optional):</div>
            <textarea name="comment" class="row"></textarea>
            <input type="submit" value="Submit"/>
        </form>
    </body>
</html>